<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/train_route_review_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/epilogue"
        android:text="East train - South..."
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/topic_review_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/mandali"
        android:text="Topic"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextText2"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="346dp"
        android:layout_height="52dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="26dp"
        android:ems="10"
        android:hint="Ride was..."
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/review_review_text"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/review_review_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="13dp"
        android:fontFamily="@font/mandali"
        android:text="Review"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextText3"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="352dp"
        android:layout_height="303dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="35dp"
        android:ems="10"
        android:hint="I think its..."
        android:inputType="text|textLongMessage|textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/review_submit_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/review_submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#0B14EE"
        android:text="Submit"
        app:cornerRadius="5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>