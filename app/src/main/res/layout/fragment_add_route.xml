<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mapFragmentRoutes"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/add_route_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/epilogue"
        android:text="+\t\tAdd route"
        app:cornerRadius="4sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/pop_up_create_route_latlong"
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_panel_text_input"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_text_add_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/mandali"
                android:text="Title"
                android:textColor="@color/navy"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/add_route_title_field"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginHorizontal="20sp"
                android:background="@drawable/panel_text_input_decoration"
                android:fontFamily="@font/mandali"
                android:hint="Rocky Route..."
                android:inputType="text"
                android:paddingBottom="5sp" />

            <TextView
                android:id="@+id/lat_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/mandali"
                android:text="Latitude"
                android:textColor="@color/navy"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/add_route_lat_field"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginHorizontal="20sp"
                android:background="@drawable/panel_text_input_decoration"
                android:fontFamily="@font/mandali"
                android:hint="60.39..."
                android:inputType="text"
                android:paddingBottom="5sp" />

            <TextView
                android:id="@+id/long_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/mandali"
                android:text="Longitude"
                android:textColor="@color/navy"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/add_route_long_field"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginHorizontal="20sp"
                android:background="@drawable/panel_text_input_decoration"
                android:fontFamily="@font/mandali"
                android:hint="80.12...."
                android:inputType="text"
                android:paddingBottom="5sp" />

            <Button
                android:id="@+id/submit_route_button"
                android:layout_width="312sp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:backgroundTint="@color/blue"
                android:backgroundTintMode="src_in"
                android:fontFamily="@font/mandali"
                android:text="Submit Route"
                android:textSize="14sp"
                app:cornerRadius="4sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>