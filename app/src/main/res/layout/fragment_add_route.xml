<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/add_route_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/epilogue"
        android:text="+\t\tAdd route"
        app:cornerRadius="4sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/pop_up_create_route_latlong"
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_panel_text_input"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_text_add_route"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="10sp"
                    android:fontFamily="@font/mandali"
                    android:text="Rating"
                    android:textColor="@color/navy"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/star_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginHorizontal="4sp"
                    android:layout_marginBottom="5sp"
                    app:srcCompat="@drawable/star_hollow" />

                <ImageView
                    android:id="@+id/star_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginHorizontal="4sp"
                    android:layout_marginBottom="5sp"
                    app:srcCompat="@drawable/star_hollow" />

                <ImageView
                    android:id="@+id/star_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginHorizontal="4sp"
                    android:layout_marginBottom="5sp"
                    app:srcCompat="@drawable/star_hollow" />

                <ImageView
                    android:id="@+id/star_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginHorizontal="4sp"
                    android:layout_marginBottom="5sp"
                    app:srcCompat="@drawable/star_hollow" />

                <ImageView
                    android:id="@+id/star_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginHorizontal="4sp"
                    android:layout_marginBottom="5sp"
                    app:srcCompat="@drawable/star_hollow" />

            </LinearLayout>

            <Button
                android:id="@+id/add_stop_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginVertical="10sp"
                android:backgroundTint="@color/blue"
                android:fontFamily="@font/mandali"
                android:text="Add Stop"
                android:textSize="14sp"
                app:cornerRadius="4sp" />

            <TextView
                android:id="@+id/lat_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:fontFamily="@font/mandali"
                android:text="Title"
                android:textColor="@color/navy"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/title_input_field_routes"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginHorizontal="20sp"
                android:background="@drawable/panel_text_input_decoration"
                android:fontFamily="@font/mandali"
                android:hint="Craziness!"
                android:inputType="text"
                android:paddingBottom="5sp" />

            <TextView
                android:id="@+id/long_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/mandali"
                android:text="Review"
                android:textColor="@color/navy"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/review_input_field_routes"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginHorizontal="20sp"
                android:background="@drawable/panel_text_input_decoration"
                android:fontFamily="@font/mandali"
                android:hint="I thought that..."
                android:inputType="text"
                android:paddingBottom="5sp" />

            <Button
                android:id="@+id/submit_route_button"
                android:layout_width="312sp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:backgroundTint="@color/blue"
                android:backgroundTintMode="src_in"
                android:fontFamily="@font/mandali"
                android:text="Submit Route"
                android:textSize="14sp"
                app:cornerRadius="4sp" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/mapFragmentRoutes"
                class="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>