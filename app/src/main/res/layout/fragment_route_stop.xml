<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RouteStop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/submit_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="125dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/epilogue"
            android:text="+\t\tSubmit Stop"
            app:cornerRadius="4sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:text="Title"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/input_field_title"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="20sp"
            android:ems="10"
            android:hint="Insane Route!"
            android:inputType="text" />

        <TextView
            android:id="@+id/text_lat_routes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:text="Latitude "
            android:textSize="20sp" />

        <EditText
            android:id="@+id/input_field_lat_routes"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_marginLeft="20sp"
            android:ems="10"
            android:hint="60.129..."
            android:inputType="text" />

        <TextView
            android:id="@+id/text_long_routes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:text="Longitude"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/input_field_long_routes"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_marginLeft="20sp"
            android:ems="10"
            android:hint="120.984..."
            android:inputType="text" />

    </LinearLayout>
</FrameLayout>