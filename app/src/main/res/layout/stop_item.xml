<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20sp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:fontFamily="@font/comfortaa"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <View
            android:id="@+id/view_separator_top_stops"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_marginHorizontal="30sp"
            android:background="@color/navy" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lat_text_stop_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40sp"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/aleo_light"
                android:text="Latitude:"
                android:textColor="@color/navy"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/lat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="54sp"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/mandali"
                android:text="Lat"
                android:textColor="@color/navy"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/long_text_stop_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40sp"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/aleo_light"
                android:text="Longitude:"
                android:textColor="@color/navy"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/lon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40sp"
                android:layout_marginTop="20sp"
                android:text="Long"
                android:textColor="@color/navy"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:id="@+id/view_separator_end_stops"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_marginTop="20sp"
            android:background="@color/dark_grey" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>