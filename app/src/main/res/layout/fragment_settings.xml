<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/nav_appearance_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="72dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/comfortaa"
        android:text="Appearance"
        android:textColor="@color/navy"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/moon_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="83dp"
        android:paddingLeft="60sp"
        android:paddingRight="15sp"
        app:layout_constraintStart_toEndOf="@+id/nav_appearance_settings"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/moon_hollow" />

    <ImageView
        android:id="@+id/sun_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="83dp"
        app:layout_constraintStart_toEndOf="@+id/moon_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sunny_filled" />

    <Button
        android:id="@+id/nav_account_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/comfortaa"
        android:text="Account"
        android:textColor="@color/navy"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nav_appearance_settings" />

    <Button
        android:id="@+id/nav_review_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/comfortaa"
        android:text="Leave a review"
        android:textColor="@color/navy"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nav_account_settings" />

    <Button
        android:id="@+id/sign_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/comfortaa"
        android:text="Sign Out"
        android:textColor="@color/navy"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nav_review_settings" />


</androidx.constraintlayout.widget.ConstraintLayout>