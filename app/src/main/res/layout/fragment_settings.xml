<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="320sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="72dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/nav_appearance_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:fontFamily="@font/mandali"
            android:text="Appearance"
            android:textColor="#000000"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/moon_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:paddingLeft="45sp"
            android:paddingRight="15sp"
            app:srcCompat="@drawable/moon_hollow" />

        <ImageView
            android:id="@+id/sun_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="0sp"
            app:srcCompat="@drawable/sunny_filled" />
    </LinearLayout>

    <Button
        android:id="@+id/nav_account_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginBottom="1dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/mandali"
        android:text="Account"
        android:textColor="#000000"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/nav_review_settings"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/nav_review_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginBottom="467dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/mandali"
        android:text="Leave a review"
        android:textColor="#000000"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>